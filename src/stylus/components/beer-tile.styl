.beer-item-parent
	position relative
	
	transform-style: preserve-3d;
	height 310px
	perspective: 1000px;

.beer-item-inner
	display block 
	width 95%
	height 300px
	position relative

.beer-tile
	border 1px solid #dadada
	border-radius 10px
	padding 10px
	margin 0 0 15px 0
	background-color $tile-bgnd
	height 260px
	overflow-x hidden
	overflow-y scroll
	
	
	.beer-logo
		display block
		width 200px
		height 200px
		margin 30px auto
		padding 0
		background-repeat no-repeat
		background-position center center
		background-size contain
	
	.list-item
		display block
		margin 0 0 10px 0
		p
			font-size 1.6rem
		
	.item-hero
		color $item-hero
		
	.tile-tools
		position absolute
		top 0
		left 0
		width 100%
		
	.tile-tool-list
		width 100%
		position relative

	.list-icon
		position absolute
		top 10px
		a.icon
			font-size 2.6rem
	
		&.list-icon-edit
			left 30px
		&.list-icon-delete
			right 20px
		&:hover
			cursor pointer
			text-decoration none




.flip-card-side-a,
.flip-card-side-b, 
.flip-card-side-c {
	width: 100%;
	position: absolute;
	height: 300px;
	backface-visibility: hidden;
	transform-origin: 50% 50%;
	transition: all .5s ease-in-out;
}

.flip-card-side-a {
	transform: rotateY(0deg) translateZ(100px);
	z-index: 1;
}
.flip-card-side-b {
	transform: rotateY(90deg) translateZ(100px);
}
.flip-card-side-c {
	transform: rotateY(-90deg) translateZ(100px);
	background-color rgba(0, 0, 255, 0.6)
}

.flip-left .flip-card-side-a {
	transform: rotateY(-90deg) translateZ(100px);
}
.flip-left .flip-card-side-b {
	transform: rotateY(0deg) translateZ(100px);
	z-index: 1;
}
.flip-left .flip-card-side-c {
	transform: rotateY(-180deg) translateZ(100px);
}


.flip-right .flip-card-side-a {
	transform: rotateY(90deg) translateZ(100px);
}
.flip-right .flip-card-side-b {
	transform: rotateY(180deg) translateZ(100px);
	z-index: 1;
}
.flip-right .flip-card-side-c {
	transform: rotateY(0deg) translateZ(100px);
}












