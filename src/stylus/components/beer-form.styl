.edit-panel
	.item-title
		font-size 1.6rem
		font-weight normal
		color #666
		display block
		text-align left
	.item-input
		display block
		width 100%
		padding 5px
	.file-display-area
		display block
		width 100px
		height 100px
		margin 15px auto
		padding 0
		background-repeat no-repeat
		background-position center center
		background-size contain
	.list-item
		&:last-child
			border-bottom none
			padding 10px 0 0 0
			text-align right
			&:after
				border-top none